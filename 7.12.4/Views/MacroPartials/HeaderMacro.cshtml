@inherits Umbraco.Web.Macros.PartialViewMacroPage

@{

    string titleHeader = @Model.MacroParameters["TitleHeader"] != null ? @Model.MacroParameters["TitleHeader"].ToString() : "";
    string centerText = (!String.IsNullOrEmpty(@Model.MacroParameters["CenterText"].ToString())) ? HttpUtility.HtmlDecode(@Model.MacroParameters["CenterText"].ToString()) : null;
    string belowText = (!String.IsNullOrEmpty(@Model.MacroParameters["BelowText"].ToString())) ? HttpUtility.HtmlDecode(@Model.MacroParameters["BelowText"].ToString()) : null;
    string buttonName = @Model.MacroParameters["ButtonName"] != null ? @Model.MacroParameters["ButtonName"].ToString() : "";
}
<head>
    <script type="text/javascript" src="~/app.js"></script>
    <link rel="stylesheet" href="style1.css">
</head>


<body>
    <div class="header-image">
        <div class="img" style="background-image: url('@Umbraco.TypedMedia(Model.MacroParameters["HeaderImage"].ToString()).Url()');
             alt="Covid Resources">
            <div class="container-header">
                <div class="in">
                    <h1 ><strong> @titleHeader </strong></h1>
                </div>
                <div id="center-text">@Html.Raw(@umbraco.library.RemoveFirstParagraphTag(centerText))  @*@Html.Raw(centerText)*@ </div>
                <div class="inner">
                  
                    <div class="below-text">
                        @Html.Raw(@umbraco.library.RemoveFirstParagraphTag(belowText))
                    </div>
              
                    <div class="button">
                        <a href="#" class="contact-link"> @buttonName</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


