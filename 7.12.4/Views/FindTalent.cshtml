@inherits Umbraco.Web.Mvc.UmbracoViewPage<Umbraco.Web.PublishedContentModels.FindTalent>
@{
    Layout = "Master.cshtml";
}

@* the fun starts here *@
<body>
    @Html.GetGridHtml(Model, "navigationPage")


    <style>
        * body {
            margin: 0px 40px;
            padding: 0%;
            font-family: soleto, sans-serif, arial !important;
            line-height: 1.42857143;
        }

        #site-logo {
            position: absolute;
            left: 0;
            height: 50px;
            top: 20px;
            transition: all .3s;
        }

        /* Navbar links */
        #navbar a {
            float: right;
            color: #014a8e;
            text-align: center;
            text-decoration: none;
        }

        navbar ul {
        }

        ul {
            margin-top: 20px;
            margin-bottom: 0px;
            position: fixed;
        }

        #primary-menu ul a {
            display: block;
            padding: 0 10px;
        }

        #primary-menu {
            overflow-y: hidden;
            clear: both;
            float: left;
            font: 16px Soleto;
            margin-left: 200px;
            text-transform: uppercase;
            zoom: 1;
            /* position: absolute; */
        }

            #primary-menu li {
                display: inline-block;
                list-style: none;
            }

        .header-container {
            padding-right: 15px;
            padding-left: 15px;
            margin-right: auto;
            margin-left: auto;
        }

        /* Style the navbar */
        #navbar {
            background-color: #fff;
            height: 100px;
            position: fixed;
            width: 100%;
            z-index: 1000;
            transition: height .3s;
        }
        /* Page content */
        /*.content {
            padding: 16px;
        }*/

        /* The sticky class is added to the navbar with JS when it reaches its scroll position */
        .sticky {
            position: fixed;
            top: 0;
            width: 100%;
        }

            /* Add some top padding to the page content to prevent sudden quick movement (as the navigation bar gets a new position at the top of the page (position:fixed and top:0) */
            .sticky + .content {
                padding-top: 60px;
            }
        }
    </style>
